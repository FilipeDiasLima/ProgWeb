<div class="container-xl">
  <div class="top-cursos-page">
    <h1 style="padding-top: 10px">Ranking</h1>
  </div>

  <table class="table table-hover">
    <thead class="table-light">
      <tr>
        <th scope="col">Posição</th>
        <th scope="col">Jogador</th>
        <th scope="col">Distância</th>
      </tr>
    </thead>
    <tbody>
      {{#each ranking}}
      <tr class="table-dark">
        <th scope="row">{{ listItem @index }}</th>
        <td>{{ nome }}</td>
        <td>{{ score }}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>