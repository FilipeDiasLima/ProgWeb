<div class="container-xl">
  <div class="top-cursos-page">
    <h1 style="padding-top: 10px">Cadastrar Curso</h1>
    <a class="game_button" href="/cursos">
      <button type="button" class="btn btn-secondary">
        <i class="fa-solid fa-arrow-left-long" style="margin-right: 10px;"></i>
        Voltar
      </button>
    </a>
  </div>

  <form action="/cursos/create" method="post">
    <div class="form-group" style="width: 50%;">
      <label class="col-form-label mt-4" for="nome">Nome do Curso</label>
      <input type="text" name="nome" id="nome" value="{{ curso.nome }}" class="form-control" required
        placeholder="Ex: Ciência da Computação">

      <fieldset class="form-group">
        <legend class="mt-4">Selecione uma Área</legend>
        {{#each areas}}
        <div class="form-check">
          <label class="form-check-label">
            <input type="radio" class="form-check-input" name="areaId" id="areaId" value="{{id}}" checked="">
            {{ area }}
          </label>
        </div>
        {{/each}}
      </fieldset>

      <label for="descricao" class="form-label mt-4">Descrição do Curso</label>
      <textarea class="form-control" id="descricao" rows="3" name="descricao" style="height: 78px;"
        value="{{ curso.descricao }}"></textarea>

      <button type="submit" class="btn btn-lg btn-info" type="button" style="margin-top: 50px; width: 100%;">
        Salvar
      </button>
    </div>
  </form>
</div>